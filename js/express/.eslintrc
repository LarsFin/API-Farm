{
    "env": {
        "es2021": true,
        "jest/globals": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "jest"
    ],
    "rules": {
        "curly": ["error", "multi"],
        "indent": ["error", 4],
        "semi": [2, "always"]
    }
}
